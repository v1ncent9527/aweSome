<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background">

    <include layout="@layout/include_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <com.v1ncent.awesome.ui.textview.RevealTextView
                android:id="@+id/RevealTextView"
                style="@style/textview"
                android:text="RevealTextView"
                app:rtv_duration="2000" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.robinhood.ticker.TickerView
                    android:id="@+id/TickerView"
                    style="@style/textview"
                    app:ticker_animationDuration="500" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/click" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <include
                    android:id="@+id/sample1"
                    layout="@layout/text_item" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.haozhang.lib.SlantedTextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/primary"
                    android:gravity="center"
                    app:slantedBackgroundColor="@color/white"
                    app:slantedLength="50dp"
                    app:slantedMode="left"
                    app:slantedText="IOS"
                    app:slantedTextColor="@color/primary"
                    app:slantedTextSize="32sp" />

                <com.haozhang.lib.SlantedTextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/primary"
                    android:gravity="center"
                    app:slantedBackgroundColor="@color/white"
                    app:slantedLength="50dp"
                    app:slantedMode="right"
                    app:slantedText="Android"
                    app:slantedTextColor="@color/primary"
                    app:slantedTextSize="18sp" />

                <com.haozhang.lib.SlantedTextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/primary"
                    android:gravity="center"
                    app:slantedBackgroundColor="@color/white"
                    app:slantedLength="50dp"
                    app:slantedMode="left_bottom_triangle"
                    app:slantedText="PHP"
                    app:slantedTextColor="@color/primary"
                    app:slantedTextSize="32sp" />

                <com.haozhang.lib.SlantedTextView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/primary"
                    android:gravity="center"
                    app:slantedBackgroundColor="@color/white"
                    app:slantedLength="50dp"
                    app:slantedMode="right_triangle"
                    app:slantedText="Object-C"
                    app:slantedTextColor="@color/primary"
                    app:slantedTextSize="18sp" />
            </LinearLayout>

            <com.allen.library.SuperTextView
                android:id="@+id/super_tv"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                app:sLeftBottomTextColor2="@color/colorAccent"
                app:sLeftBottomTextString="中信银行（8888）"
                app:sLeftBottomTextString2="限额说明>>"
                app:sLeftIconRes="@mipmap/zxyh"
                app:sLeftTopTextString="银行卡支付"
                app:sLineShow="bottom"
                app:sRightCheckBoxRes="@drawable/circular_check_bg"
                app:sRightCheckBoxShow="true"
                app:sUseRipple="true" />

            <TextView
                android:id="@+id/LinkBuilder"
                style="@style/textview"
                android:layout_height="wrap_content"
                android:text="My github is https://github.com/v1ncent9527 " />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/SuperTextView"
                    style="@style/textview"
                    android:text="SuperTextView" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:src="@mipmap/click" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>