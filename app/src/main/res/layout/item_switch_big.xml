<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/buy_icon"
            app:backgroundTint="@color/primary" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/image_big"
                android:layout_width="144dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/lg" />

            <TextView
                android:id="@+id/movie_name_big"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/image_big"
                android:textColor="@color/black_21"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="Chad" />

            <TextView
                android:id="@+id/movie_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/movie_name_big"
                android:layout_alignStart="@+id/movie_name_big"
                android:layout_below="@+id/movie_name_big"
                android:layout_marginTop="16dp"
                android:textColor="#888888"
                android:textSize="12sp"
                tools:text="He was one of Australia's most distinguished artistes" />


            <TextView
                android:id="@+id/movie_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/movie_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/movie_content"
                android:layout_marginBottom="17dp"
                android:textColor="@color/black_21"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="$ 12" />
        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>