<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="1dp"
    android:background="@color/window_background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <com.v1ncent.awesome.widget.CircleImageView
        android:id="@+id/drag_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/taobao"
        app:border_color="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/drag_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="item1"
            android:textColor="@color/uncheck_color"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="chenjingcoder@gmail.com"
            android:textColor="@color/uncheck_color"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="26dp"
        android:layout_height="wrap_content"
        android:src="@mipmap/drag_icon" />
</LinearLayout>