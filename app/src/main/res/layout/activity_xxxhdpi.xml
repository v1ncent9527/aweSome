<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_background"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↓↓wrap_content↓↓"
                android:textColor="@color/primary"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_md"
                android:textColor="#ea0073"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/github_md" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_hd"
                android:textColor="#00a791"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/github_hd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_xhd"
                android:textColor="#0093de"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/github_xhd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_xxhd"
                android:textColor="#00a791"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/github_xxhd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_xxxhd"
                android:textColor="#ff9cee"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/github_xxxhd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↓↓256dp↓↓"
                android:textColor="@color/primary"
                android:textSize="32sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_md"
                android:textColor="#ea0073"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:src="@mipmap/github_md" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_hd"
                android:textColor="#00a791"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:src="@mipmap/github_hd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_xhd"
                android:textColor="#0093de"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:src="@mipmap/github_xhd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_xxhd"
                android:textColor="#00a791"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:src="@mipmap/github_xxhd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="github_xxxhd"
                android:textColor="#ff9cee"
                android:textSize="32sp" />

            <ImageView
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:src="@mipmap/github_xxxhd" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>